generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int          @id @default(autoincrement())
  username  String       @unique
  password  String
  role      Role         @default(USER)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  news      News[]
  posts     SocialPost[]
}

model Player {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  phoneNumber String?
  goals       Int      @default(0)
  teamId      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isCalledUp  Boolean  @default(false)
  team        Team?    @relation(fields: [teamId], references: [id])
}

model Team {
  id        String   @id @default(cuid())
  name      String
  category  String
  competId  String?  // ID de la comp√©tition FFF
  pouleId   String?  // ID de la poule FFF
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  players   Player[]
}

model News {
  id        String   @id @default(cuid())
  title     String
  content   String
  imageUrl  String?
  authorId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    User     @relation(fields: [authorId], references: [id])
}

model SocialPost {
  id        String   @id @default(cuid())
  content   String
  platform  Platform
  authorId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    User     @relation(fields: [authorId], references: [id])
}

enum Role {
  ADMIN
  USER
}

enum Platform {
  FACEBOOK
  TWITTER
  INSTAGRAM
}
